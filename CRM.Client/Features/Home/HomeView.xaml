<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRM.Client.Features.Home.HomeView"
             xmlns:frame="clr-namespace:CRM.UI.Component;assembly=CRM.UI"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:ui="clr-namespace:CRM.UI;assembly=CRM.UI"
             >
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="telerik:DataGridCurrentCellAppearance" x:Key="CurrentCellStyle">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="Transparent" />
            </Style>

            <!-- Common header style -->
            <Style x:Key="DefaultColumnHeaderStyle" TargetType="telerik:DataGridColumnHeaderAppearance">
                <Setter Property="TextHorizontalOptions" Value="Center" />
                <Setter Property="SortIndicatorHorizontalOptions" Value="Center" />
                <Setter Property="BorderColor" Value="Transparent" />
            </Style>

            <!-- Common cell content style -->
            <Style x:Key="DefaultCellContentStyle" TargetType="telerik:DataGridTextCellAppearance">
                <Setter Property="HorizontalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>

        <DataTemplate x:Key="StatusCellTemplate">
            <HorizontalStackLayout IsClippedToBounds="True"
                               VerticalOptions="Center"
                               Margin="4, 0">
                <Label Text="{Binding Status}"
                   Margin="2, 0" />
                <Label Text="{Binding StatusTime}"
                   IsVisible="{Binding Status, Converter={StaticResource StatusFlightToBooleanConverter}}"
                   TextColor="{StaticResource AccentColor8}"
                   Margin="2, 0" />
            </HorizontalStackLayout>
        </DataTemplate>
    </ContentView.Resources>
    <VerticalStackLayout>
        <Grid ColumnDefinitions="128*,64*"
              RowDefinitions="*,*,*"
              Padding="34,24">
            <!--Hello and Date time-->
            <VerticalStackLayout Grid.Row="0"
                                 Grid.Column="0"
                                 Spacing="10"
                                 Margin="0,0,0,38">
                <Label 
                   Text="Welcome Tung Phan!"
                   TextColor="Black"
                   FontSize="32"
                   FontFamily="RobotoSB"
                    >
                </Label>
                <Label 
                   Text="May 28, 2020"
                   TextColor="Black"
                   FontSize="24"
                   FontFamily="RobotoREG">
                </Label>
            </VerticalStackLayout>
            
            <!--Summary boxes-->
            <VerticalStackLayout Grid.Row="1"
                                 Grid.Column="0"
                                 Spacing="10"
                                 Margin="0,0,0,14">
                <Label 
                   Text="Application Statistic"
                   TextColor="Black"
                   FontSize="16"
                   FontAttributes="Bold"
                   FontFamily="RobotoREG"
                   Margin="14,0,0,0">
                </Label>
                <Grid ColumnDefinitions="*,*,*"
                      ColumnSpacing="14">
                    <frame:DataFrame Grid.Column="0" 
                                     DataInfo="6"
                                     DataTitle="Contract Roles"
                                     DataFrameBackgroundColor="White"
                                     DataInfoColor="{x:Static ui:AppColors.ThemeBlue}"
                                     DataTitleColor="Black"
                                     Padding="8"
                                    />
                    <frame:DataFrame Grid.Column="1" 
                                     DataInfo="12"
                                     DataTitle="Full-Time Roles"
                                     DataFrameBackgroundColor="White"
                                     DataInfoColor="{x:Static ui:AppColors.ThemeBlue}"
                                      DataTitleColor="Black"
                                     Padding="8"
                                        />
                    <frame:DataFrame Grid.Column="2" 
                                     DataInfo="18"
                                     DataTitle="Total Applications"
                                     DataFrameBackgroundColor="White"
                                     DataInfoColor="{x:Static ui:AppColors.ThemeBlue}"
                                     DataTitleColor="Black"
                                     Padding="8"
                                        />
                </Grid>
            </VerticalStackLayout>

            <!--Tabular data-->
            <VerticalStackLayout Grid.Row="2"
                     Grid.Column="0"
                     Spacing="10"
                            >
                <Grid ColumnDefinitions="*,*">
                    <Label Grid.Column="0"
                           Text="Status board"
                           HorizontalOptions="Start"
                           TextColor="Black"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="RobotoREG"
                           Margin="14,0,0,0"/>
                    <Label Grid.Column="1"
                           Text="Application Statistic"
                           HorizontalOptions="End"
                           TextColor="Black"
                           FontSize="16"
                           FontAttributes="Bold"
                           FontFamily="RobotoREG" />
                </Grid>
                <telerik:RadBorder  BorderColor="#04A2AA"
                   CornerRadius="8"
                   AutomationId="border"
                   BorderThickness="1">
                    <telerik:RadDataGrid x:Name="grid" 
                                    BorderBrush="Transparent"
                                    ItemsSource="{Binding Roles}" 
                                    AutoGenerateColumns="False"
                                    UserFilterMode="Disabled"
                                    UserEditMode="None"
                                    UserGroupMode="Disabled"
                                    UserSortMode="None"
                                    AutomationId="dataGrid"
                                    SelectionMode="None"
                                    GridLinesVisibility="Horizontal"
                                    GridLinesThickness="1.4"
                                         CurrentCellStyle="{StaticResource CurrentCellStyle}"
                                        >
                        <telerik:RadDataGrid.Columns>
                            <!--Checkbox-->
                            <telerik:DataGridTemplateColumn HeaderStyle="{StaticResource DefaultColumnHeaderStyle}">
                                <telerik:DataGridTemplateColumn.CellContentTemplate>
                                    <DataTemplate>
                                        <VerticalStackLayout HorizontalOptions="Center">
                                            <CheckBox></CheckBox>
                                        </VerticalStackLayout>
                                    </DataTemplate>
                                </telerik:DataGridTemplateColumn.CellContentTemplate>
                            </telerik:DataGridTemplateColumn>
                            <!--Logo-->
                            <telerik:DataGridTemplateColumn HeaderStyle="{StaticResource DefaultColumnHeaderStyle}">
                                <telerik:DataGridTemplateColumn.CellContentTemplate>
                                    <DataTemplate>
                                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                            <Image>
                                                <Image.Source>
                                                    <FontImageSource Color="#989898" FontFamily="FAR" Glyph="{Binding Logo}" Size="{x:Static ui:Dimens.FontSizeT2}" />
                                                </Image.Source>
                                            </Image>
                                        </VerticalStackLayout>
                                    </DataTemplate>
                                </telerik:DataGridTemplateColumn.CellContentTemplate>
                            </telerik:DataGridTemplateColumn>
                            <!--Company name-->
                            <telerik:DataGridTextColumn PropertyName="CompanyName" HeaderText="CompanyName"
                                HeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                                CellContentStyle="{StaticResource DefaultCellContentStyle}" />
                            <!--Position-->
                            <telerik:DataGridTextColumn PropertyName="Position" HeaderText="Position"
                                HeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                                CellContentStyle="{StaticResource DefaultCellContentStyle}" />
                            <!--Duration-->
                            <telerik:DataGridTextColumn PropertyName="Duration" HeaderText="Duration"
                                HeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                                CellContentStyle="{StaticResource DefaultCellContentStyle}" />
                            <!--JobId-->
                            <telerik:DataGridTextColumn PropertyName="JobId" HeaderText="JobId"
                                HeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                                CellContentStyle="{StaticResource DefaultCellContentStyle}" />
                            <!--Status-->
                            <telerik:DataGridTextColumn PropertyName="Status" HeaderText="Status"
                                HeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                                CellContentStyle="{StaticResource DefaultCellContentStyle}" />
                            <!--More button-->
                            <telerik:DataGridTemplateColumn HeaderStyle="{StaticResource DefaultColumnHeaderStyle}">
                                <telerik:DataGridTemplateColumn.CellContentTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <VerticalStackLayout>
                                                <ImageButton>
                                                    <ImageButton.Source>
                                                        <FontImageSource Color="#989898" FontFamily="FAR" Glyph="{x:Static ui:FaSolModels.EllipsisVertical}" Size="{x:Static ui:Dimens.NavBarTextSize}" />
                                                    </ImageButton.Source>
                                                </ImageButton>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </telerik:DataGridTemplateColumn.CellContentTemplate>
                            </telerik:DataGridTemplateColumn>

                        </telerik:RadDataGrid.Columns>
                    </telerik:RadDataGrid>
                </telerik:RadBorder>

            </VerticalStackLayout>
        </Grid>

    </VerticalStackLayout>
</ContentView>