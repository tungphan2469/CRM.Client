<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRM.Client.Layouts.AndroidLayout"
            xmlns:local="clr-namespace:CRM.Client"
             >
    <TabBar
    Route="main">
        <Tab
        Title="Trang chủ"
        Route="home">
            <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
        Title="Trò chuyện"
        Route="messaging">
            <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
        Title="Trò chơi"
        Route="games">
            <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
        Title="Cá nhân"
        Route="profile">
            <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

    </TabBar>
</Shell>